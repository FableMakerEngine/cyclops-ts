{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "target": "esNext",
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "paths": {
      "mini-signals": [
        "./node_modules/resource-loader/typings/mini-signals.d.ts"
      ]
    },
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}
